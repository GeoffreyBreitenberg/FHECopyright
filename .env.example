# ==========================================
# Network Configuration
# ==========================================

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Alternative Sepolia RPC URLs (Uncomment to use):
# SEPOLIA_RPC_URL=https://ethereum-sepolia.publicnode.com
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# SEPOLIA_RPC_URL=https://rpc2.sepolia.org
# SEPOLIA_RPC_URL=https://sepolia.gateway.tenderly.co

# ==========================================
# Wallet Configuration
# ==========================================

# Private Key (WITHOUT 0x prefix)
# NEVER commit your actual private key to git
# Export from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Deployer Address (Optional - for verification)
DEPLOYER_ADDRESS=

# ==========================================
# Contract Verification
# ==========================================

# Etherscan API Key
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ==========================================
# Gas Reporting & Optimization
# ==========================================

# Enable gas reporting during tests
REPORT_GAS=false

# Save gas report to file
GAS_REPORT_FILE=gas-report.txt

# CoinMarketCap API for gas pricing in USD
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=

# Gas price settings (in gwei)
GAS_PRICE=auto
MAX_FEE_PER_GAS=
MAX_PRIORITY_FEE_PER_GAS=

# ==========================================
# Performance & Optimization
# ==========================================

# Solidity Optimizer
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# Compilation settings
SOLC_VERSION=0.8.24
EVM_VERSION=cancun

# ==========================================
# Security Configuration
# ==========================================

# Access Control
OWNER_ADDRESS=
PAUSER_ADDRESS=
ADMIN_ADDRESS=

# Emergency Controls
PAUSER_ENABLED=true
EMERGENCY_PAUSE=false

# Security Thresholds
MAX_GAS_LIMIT=10000000
MIN_CONFIRMATION_BLOCKS=5

# Rate Limiting
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=100

# ==========================================
# Testing Configuration
# ==========================================

# Test network settings
TEST_MNEMONIC=test test test test test test test test test test test junk
TEST_ACCOUNT_COUNT=10

# Coverage settings
COVERAGE_THRESHOLD_STATEMENTS=85
COVERAGE_THRESHOLD_BRANCHES=75
COVERAGE_THRESHOLD_FUNCTIONS=90
COVERAGE_THRESHOLD_LINES=85

# ==========================================
# Network Forking (Development)
# ==========================================

# Enable mainnet forking for testing
FORK_ENABLED=false

# Specific block number to fork from
FORK_BLOCK_NUMBER=

# Fork chain ID
FORK_CHAIN_ID=1

# ==========================================
# Additional Networks
# ==========================================

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth.llamarpc.com

# Goerli Testnet (Deprecated)
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY

# Mumbai Testnet (Polygon)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# BSC Testnet
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# ==========================================
# CI/CD Configuration
# ==========================================

# CI environment
CI=false

# Disable prompts in CI
CI_NO_PROMPT=true

# Skip optional checks
CI_SKIP_OPTIONAL=false

# ==========================================
# Monitoring & Analytics
# ==========================================

# Enable performance monitoring
PERFORMANCE_MONITORING=false

# Analytics endpoint
ANALYTICS_ENDPOINT=

# Error reporting
SENTRY_DSN=

# ==========================================
# Development Tools
# ==========================================

# Hardhat network settings
HARDHAT_NETWORK=hardhat
HARDHAT_CHAIN_ID=31337

# Verbose logging
VERBOSE=false
DEBUG=false

# Auto-mining
AUTO_MINE=true

# ==========================================
# Frontend Integration
# ==========================================

# Frontend API endpoint
FRONTEND_URL=http://localhost:3000

# CORS settings
CORS_ORIGIN=*

# WebSocket support
WEBSOCKET_ENABLED=false
WEBSOCKET_PORT=8546

